{% extends 'baseFront.html.twig' %}

{% block title %}Modifier la Voiture{% endblock %}

{% block body %}
<main id="main" class="main">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Modifier la voiture :</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.marque, 'Marque de la voiture', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.model, 'Mod√®le de la voiture', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.couleur, 'Couleur de la voiture', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.couleur, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.matricule, 'Matricule de la voiture', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="idparking" class="form-label">Parking de la voiture</label>
                            {{ form_widget(form.idparking, {'attr': {'class': 'form-control'}}) }}
                        </div>
                         <!-- Champ pour afficher les places disponibles -->
         <div class="form-group">
        {{ form_label(form.place_disponible, 'Places disponibles', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.place_disponible, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
         </div>
                    </div>
                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
