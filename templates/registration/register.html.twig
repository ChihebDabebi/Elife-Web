{% extends 'log.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}
<style>
    .wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f5f5f5;
      background-image: url('back/img/house1.avif');
      background-size: cover;
      background-position: center;
    }

    .form-box {
      background-color: #fff;
      padding: 30px;
      border-radius: 5px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      max-width: 600px;
    }

    .form-box h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #007bff;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      color: #333;
    }

    .form-group input,
    .form-group select {
      display: block;
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
      background-color: #f5f5f5;
    }

    .form-group input:focus,
    .form-group select:focus {
      border-color: #007bff;
   }

    .remember-forgot {
      margin-top: 10px;
    }

    .remember-forgot label {
      font-size: 12px;
      color: #333;
    }

    .button {
      background-color: #007bff;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      display: block;
      width: 100%;
      margin-top: 20px;
      font-weight: bold;
      text-transform: uppercase;
      transition: background-color 0.3s ease;
    }

    .button:hover {
      background-color: #0056b3;
    }

    .welcome-image {
        width: 100%; /* make the image full-width */
        height: 200px; /* set a fixed height for the image */
        object-fit: cover; /* scale the image to cover the entire container */
        border-radius: 10px; /* add some rounded corners to the image */
        margin-bottom: 20px; /* add some space between the image and the form */
    }
</style>

<div class="wrapper">
    <div class="form-box">
        <img src="back/img/lina.png" alt="Welcome Image" class="welcome-image">
        <h2>welcome</h2>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_row(form.nom) }}
        </div>
        <div class="form-group">
            {{ form_row(form.prenom) }}
        </div>
        <div class="form-group">
            {{ form_row(form.number) }}
        </div>
        <div class="form-group">
            {{ form_row(form.mail) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password) }}
        </div>
<div class="form-group">
    {{ form_row(form.role, {'attr': {'hidden': true}}) }}
    <p class="text-muted small">Your role is automatically assigned as RESIDENT.</p>
</div>
        <div class="form-group">
            {{ form_widget(form.Sign_up, {'attr': {'class': 'button'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}