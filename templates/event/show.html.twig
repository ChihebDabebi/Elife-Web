{% extends 'base.html.twig' %}

{% block title %}Détails de l'Event{% endblock %}

{% block body %}
<main id="main" class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Détails de l'évènement</h1>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-md-4">Titre :</dt>
                            <dd class="col-md-8">{{ event.title }}</dd>
                            
                            <dt class="col-md-4">Date :</dt>
                            <dd class="col-md-8">{{ event.date ? event.date|date('Y-m-d') : 'Date non définie' }}</dd>
                            
                            <dt class="col-md-4">Nombre de personnes :</dt>
                            <dd class="col-md-8">{{ event.nbrPersonne }}</dd>
                            
                            <dt class="col-md-4">Description :</dt>
                            <dd class="col-md-8">{{ event.listeInvites }}</dd>
                            
                            <dt class="col-md-4">Espace :</dt>
                            <dd class="col-md-8">{{ event.Espace }}</dd>
                        </dl>
                    </div>
                    <a class="btn btn-info btn-sm" href="{{ path('app_event_pdf', {'idevent': event.idevent}) }}">Générer PDF</a>

                    <div class="card-footer">
                        <a href="{{ path('app_event_index') }}" class="btn btn-primary">Retour à la liste des événements</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
