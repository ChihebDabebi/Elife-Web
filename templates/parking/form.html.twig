<div class="container">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_label(form.nom, 'Nom du parking', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            <div class="alert alert-danger">
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.capacite, 'Capacit√© du parking', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.capacite) }}
        </div>
        <div class="form-group">
            {{ form_label(form.type, 'Type de parking', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>
        
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}
</div>
