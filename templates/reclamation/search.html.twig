{% extends 'baseFront.html.twig' %}

{% block body %}
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Search Results</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Search Results</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            {% if reclamations %}
                                <h5 class="card-title">Search Results</h5>
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">ID</th>
                                            <th class="text-center">Description</th>
                                            <th class="text-center">Date</th>
                                            <th class="text-center">Category</th>
                                            <th class="text-center">Status</th>
                                            <th class="text-center">Image</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for reclamation in reclamations %}
                                            <tr>
                                                <td class="text-center">{{ reclamation.idrec }}</td>
                                                <td class="text-center">{{ reclamation.descrirec }}</td>
                                                <td class="text-center">{{ reclamation.daterec|date('Y-m-d') }}</td>
                                                <td class="text-center">{{ reclamation.categorierec }}</td>
                                                <td class="text-center">{{ reclamation.statutrec }}</td>
                                                <td class="text-center">
                                                    {% if reclamation.imagedata %}
                                                        <img src="data:image/jpeg;base64,{{ reclamation.imagedata|base64_encode }}" alt="Reclamation Image" class="reclamation-image" style="max-width: 100px; max-height: 100px;">
                                                    {% else %}
                                                        No image available
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <a class="me-3" href="{{ path('app_reclamation_show', {'idrec': reclamation.idrec}) }}">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_reclamation_edit', {'idrec': reclamation.idrec}) }}">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>
                                                    <a href="{{ path('app_reclamation_delete', {'idrec': reclamation.idrec}) }}">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            {% else %}
                                <p class="text-center">No results found.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}