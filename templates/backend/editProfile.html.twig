{% extends 'log.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block stylesheets %}
<style>
  .card {
    border: none;
    border-radius: 10px;
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
    background-color: #fff;
  }

  .card-body {
    padding: 40px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    font-weight: 500;
    color: #333;
  }

  .form-control {
    height: 50px;
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-bottom: 2px solid #ccc;
    border-radius: 0;
    box-shadow: none;
  }

  .form-control:focus {
    border-bottom-color: #337ab7;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .btn-primary {
    background-color: #337ab7;
    border-color: #337ab7;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: 500;
    border-radius: 10px;
    transition: all 0.3s ease-in-out;
  }

  .btn-primary:hover {
    background-color: #23527c;
    border-color: #23527c;
  }

  /* Additional styling for enhanced aesthetics */
  body {
    background-color: #f5f5f5;
  }

  .card {
    max-width: 500px;
    margin: 0 auto;
  }

  .form-group {
    display: flex;
    align-items: center;
  }

  .form-label {
    width: 120px;
    margin-right: 20px;
  }

  .btn-primary {
    width: 150px;
    margin-left: auto;
  }
</style>
{% endblock %}

{% block body %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 col-xl-3">
      <div class="card">
        <div class="card-body">
          <h2 class="text-center mb-4">Edit Profile</h2>
          {{ form_start(form) }}
          <div class="form-group">
            <label for="nom" class="form-label">Nom</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group">
            <label for="prenom" class="form-label">Prénom</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group">
            <label for="number" class="form-label">Numéro de téléphone</label>
            {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group">
            <label for="mail" class="form-label">Email Address</label>
            {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
          </div>
         
          
          <button class="btn btn-primary">Update Profile</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
